			<code><![CDATA[
				$tJoin#examplemodel#=#examplemodel#::getInstance()->getSelect();

				$tmp=array();
				foreach($tJoin#examplemodel# as $key => $val){
					$tmp[]=$key.':'.$val;
				}
				$sJoin#examplemodel#=implode(';',$tmp);
				$o#examplemodel#=new stdclass;
				$o#examplemodel#->value=$sJoin#examplemodel#;

